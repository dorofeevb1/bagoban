<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="13dp" android:height="13dp" />
        </shape>
    </item>
    <item android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape android:shape="oval">
            <size android:width="11dp" android:height="11dp" />
            <gradient
                android:centerX="0.6"
                android:centerY="0.35"
                android:gradientRadius="20"
                android:startColor="#fff"
                android:centerColor="#a00"
                android:endColor="#000"
                android:type="radial" />
        </shape>
    </item>
</layer-list>