<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок и кнопка "Назад" -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Кнопка "Назад" -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <!-- Заголовок "Наши приложения" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Наши приложения"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!-- Баннеры приложений -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Баннер НейроКафе -->
            <ImageView
                android:id="@+id/neurocafeBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/neurocafe_banner"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp" />

            <!-- Баннер MetaModern -->
            <ImageView
                android:id="@+id/metamodernBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/metamodern_banner"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp" />

            <!-- Баннер Пирамида -->
            <ImageView
                android:id="@+id/pyramidBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pyramid_banner"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>